<div class="row">
  <div class="col-sm-10 col-offset-sm-1">
    <div>
      <h3>Trivias played by <%= @user.name.capitalize %> for <%= @topic.name %></h3>
      <% if @played_trivias.present? %>
        <ul class="list-unstyled trivia-header">
          <% @played_trivias.each do |played_trivia| %>
            <li class="trivia-display">
              <%= played_trivia.trivia.title %> | <strong>Score: </strong>  <%= played_trivia.score %>
            </li>
          <% end %>
        </ul>
      <% else %>
        <p>This topic has no trivia. Be the first one to add a trivia!</p>
      <% end %>
    </div>
  </div>
</div>
