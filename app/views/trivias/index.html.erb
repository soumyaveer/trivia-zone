<div class="row">
  <div class="col-sm-8 col-offset-2">
    <h2>Trivia Topics:</h2>
    <ul class="list-unstyled">
      <% @trivias.each do |trivia| %>
      <li><%= link_to trivia.title, topic_trivia_path(@topic, trivia) %></li>
      <% end %>
    </ul>
  </div>

  <div class="col-sm-8 col-offset-2">
    <%= link_to "Add a new Trivia", new_topic_trivia_path(@topic) %>
  </div>
</div>
