<!DOCTYPE html>
<html>
  <head>
    <title>TriviaZone</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body class="<%= controller_name %>-<%= action_name %>-page">
    <% if user_signed_in? %>
      <%= render "navbar" %>
      <%= render "logged_in_user" %>
    <% end %>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
