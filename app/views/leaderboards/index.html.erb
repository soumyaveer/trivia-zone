<div class="row">
  <div class="col-sm-8 col-offset-2">
    <div>
      <% @topics.each do |topic| %>
        <% if topic.players %>
          <h3><%= topic.name%></h3>
            <table class="table table-striped table-bordered">
              <tr>
                <th>Name</th>
                <th>Score</th>
              </tr>
              <% topic.players.each do |player| %>
                <tr>
                  <td><%= player.name %></td>
                  <td><%= player.topic_score(topic) %></td>
                </tr>
              <% end %>
        </table>
        <% end %>
      <% end %>

    </div>
  </div>
</div>
