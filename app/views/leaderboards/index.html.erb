<div class="row">
  <div class="col-sm-10 col-offset-1">
    <div class="leaderboard">
      <% @topics.each do |topic| %>
        <% if topic.players.present? %>
          <h3><%= topic.name%></h3>
            <table class="table table-bordered">
              <tr id="table-header">
                <th>Name</th>
                <th>Score</th>
              </tr>
              <% topic.players.each do |player| %>
                <tr>
                  <td><%= player.name.capitalize %></td>
                  <td><%= player.topic_score(topic) %></td>
                </tr>
              <% end %>
        </table>
        <% end %>
      <% end %>
    </div>
    <%= link_to "Back", root_path , class: "pull-right"%>
  </div>
</div>
