<div class="row">
  <div class="col-sm-10 col-offset-1">
    <div class="leaderboard">
      <% @topics.each do |topic| %>
        <% if topic.top_players.present? %>
          <h3><%= topic.name %></h3>
          <table class="table table-bordered">
            <thead>
              <tr class="table-header">
                <th>Name</th>
                <th>Score</th>
              </tr>
            </thead>
            <tbody>
              <% topic.top_players.each do |player| %>
                <tr>
                  <td><%= link_to player.name.capitalize, user_trivia_sessions_path(player, {topic_id: topic}) %></td>
                  <td><%= player.topic_score(topic) %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        <% end %>
      <% end %>
    </div>
    <%= link_to "Back", root_path, class: "pull-right" %>
  </div>
</div>
