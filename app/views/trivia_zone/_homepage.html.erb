<div class="col-sm-10 col-sm-offset-1">
  <h2>Welcome <%= current_user.name %></h2>
  <h3>Played Trivias:</h3>
  <% if @trivia_sessions.present? %>
    <table class="table table-striped table-bordered">
      <tr>
        <th>Name</th>
        <th>Score</th>
        <th>Delete Played Trivia</th>
      </tr>
      <% @trivia_sessions.each do |trivia_session| %>
      <tr>
          <td>
            <%= trivia_session.trivia.title %>
          </td>
          <td><%= trivia_session.score %></td>
          <td><%= link_to "Delete", trivia_trivia_session_path(trivia_session.trivia, trivia_session), method: :delete %></td>
      </tr>
      <% end %>
    </table>
  <% else %>
    <p>You haven't played any Trivia yet!
    <%= link_to "Start playing now", topics_url %></p>
  <% end %>
</div>

<div class="col-sm-10 col-sm-offset-1">
  <%= link_to "Add a new Trivia", new_topic_path, class: "btn btn-primary" %><br>
</div>
